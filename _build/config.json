{
  "name": "a11y",
  "lowCaseName": "a11y",
  "description": "MODX Accessible Manager Project",
  "author": "MODX",
  "version": "0.1.0",
  "package": {
    "elements": {
      "widgets": [
        {
          "name": "a11y.widget.dyslexia",
          "description": "a11y.widget.dyslexia_description",
          "type": "file",
          "lexicon": "a11y:dashboards",
          "size": "half",
          "content": "widget.dyslexia.php"
        },
        {
          "name": "a11y.widget.font_size",
          "description": "a11y.widget.font_size_description",
          "type": "file",
          "lexicon": "a11y:dashboards",
          "size": "half",
          "content": "widget.fontsize.php"
        },
        {
          "name": "a11y.widget.switch_theme",
          "description": "a11y.widget.switch_theme_description",
          "type": "file",
          "lexicon": "a11y:dashboards",
          "size": "half",
          "content": "widget.switchtheme.php"
        }
      ]
    }
  },
  "build": {
    "resolver": {
      "files": [
        {
          "source": "[[+packagePath]]/manager/controllers/a11y/",
          "target": "return MODX_MANAGER_PATH . 'controllers/';"
        },
        {
          "source": "[[+packagePath]]/manager/templates/a11y/",
          "target": "return MODX_MANAGER_PATH . 'templates/';"
        }
      ],
      "after": [
        "resolve.theme.php"
      ]
    }
  }
}